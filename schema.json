{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/MangaItem",
    "definitions": {
        "MangaItem": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "string",
                    "pattern": "^(https://x\\.com/noreal_koma/status/\\d+|https://www\\.instagram\\.com/p/[^/]+/)$"
                },
                "embed": {
                    "type": "string",
                    "pattern": "^(https://twitter\\.com/noreal_koma/status/\\d+|https://www\\.instagram\\.com/p/[^/]+/)$"
                },
                "publishDate": {
                    "type": "string",
                    "format": "date-time"
                },
                "text": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "reading": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "pattern": "^[ぁ-ゖー]*$"
                    }
                },
                "tag": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "series": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "characters": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "relatedLinks": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/RelatedLink"
                    }
                }
            },
            "required": [
                "id",
                "publishDate",
                "reading",
                "text",
                "tag",
                "series",
                "characters",
                "relatedLinks"
            ],
            "title": "MangaItem"
        },
        "RelatedLink": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "SUZURI",
                        "LINEスタンプ",
                        "Instagram",
                        "QRコード",
                        "関連"
                    ]
                },
                "title": {
                    "type": "string"
                },
                "url": {
                    "type": "string",
                    "pattern": "^https://"
                }
            },
            "required": [
                "type",
                "title",
                "url"
            ],
            "title": "RelatedLink",
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "SUZURI"
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "url": {
                                "type": "string",
                                "pattern": "^https://suzuri\\.jp/noreal_koma/designs/\\d+$"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "LINEスタンプ"
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "url": {
                                "type": "string",
                                "pattern": "^https://store\\.line\\.me/stickershop/product/\\d+/ja$"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "Instagram"
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "url": {
                                "type": "string",
                                "pattern": "^https://www\\.instagram\\.com/noreal_koma/p/[^/]+/$"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "QRコード"
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "url": {
                                "type": "string",
                                "pattern": "^https://"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "関連"
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "url": {
                                "type": "string",
                                "pattern": "^https://"
                            }
                        }
                    }
                }
            ]
        }
    }
}
